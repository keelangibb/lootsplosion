// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    // NOTE: When using postgresql, mysql or sqlserver, uncomment the @db.Text annotations in model Account below
    // Further reading:
    // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
    // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model Weapon {
    id               String       @id @default(cuid())
    name             String       @unique
    description      String
    Rarity           Rarity       @relation(fields: [rarityName], references: [name])
    rarityName       String
    flavorText       String
    Type             WeaponType   @relation(fields: [typeName], references: [name])
    typeName         String
    Manufacturer     Manufacturer @relation(fields: [manufacturerName], references: [name])
    manufacturerName String
    Content          Content      @relation(fields: [contentName], references: [name])
    contentName      String
    Sources          Source[]
    DropChances      DropChance[]
    Elements         Element[]
    picture          String
    picture2         String
    weaponCode       String?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([contentName])
    @@index([name])
    @@index([rarityName])
    @@index([typeName])
    @@index([manufacturerName])
}

model DropChance {
    id         String @id @default(cuid())
    chance     Float
    Weapon     Weapon @relation(fields: [weaponName], references: [name])
    weaponName String
    Source     Source @relation(fields: [sourceName], references: [name])
    sourceName String

    @@unique([weaponName, sourceName])
    @@index([weaponName, sourceName])
    @@index([weaponName])
    @@index([sourceName])
}

model Rarity {
    id      String   @id @default(cuid())
    name    String   @unique
    Weapons Weapon[]

    @@index([name])
}

model WeaponType {
    id      String   @id @default(cuid())
    name    String   @unique
    Weapons Weapon[]

    @@index([name])
}

model Manufacturer {
    id      String   @id @default(cuid())
    name    String   @unique
    Weapons Weapon[]

    @@index([name])
}

// Boss, quest, vendor, chest, etc
model SourceType {
    id      String   @id @default(cuid())
    name    String   @unique
    Sources Source[]

    @@index([name])
}

model Source {
    id             String       @id @default(cuid())
    name           String       @unique
    description    String
    picture        String
    Location       Location[]
    SourceType     SourceType   @relation(fields: [sourceTypeName], references: [name])
    sourceTypeName String
    Content        Content[]
    Weapons        Weapon[]
    DropChance     DropChance[]

    @@index([sourceTypeName])
    @@index([name])
}

// Location of the source a ie. the map
model Location {
    id          String   @id @default(cuid())
    name        String   @unique
    description String?
    picture     String
    map         String
    Sources     Source[]
    Content     Content  @relation(fields: [contentName], references: [name])
    contentName String

    @@index([contentName])
    @@index([name])
}

// Base game or DLC
model Content {
    id        String     @id @default(cuid())
    name      String     @unique
    Weapons   Weapon[]
    Sources   Source[]
    Locations Location[]

    @@index([name])
}

model Element {
    id      String   @id @default(cuid())
    name    String   @unique
    picture String
    Weapons Weapon[]

    @@index([name])
}
